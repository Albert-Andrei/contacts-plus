{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["../src/assets/*"],
      "@theme/*": ["../src/theme/*"],
      "@utils/*": ["../src/utils/*"],
      "@styles/*": ["../src/styles/*"],
      "@store/*": ["../src/store/*"],
      "@components/*": ["./src/components/*"]
    },
    "strict": true
  }
}
